---
const { title, isHome = false, frontmatter, description } = Astro.props;
const defaultDescription = "Technologist and Developer";
import Footer from "../components/Footer.astro";
import LatestNotes from "../components/LatestNotes.astro";
import SocialLinks from "../components/SocialLinks.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <meta charset="utf-8" />
    <title>Gil Creque - {title || frontmatter?.title}</title>
    <meta
      name="description"
      content={description || frontmatter?.description || defaultDescription}
    />
    <meta name="author" content="Gil Creque" />

    <!-- Google Site Verification
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <meta
      name="google-site-verification"
      content="baTB5HjY84P_avk0rfsFGUFu6_CqqmyNZUh13QCsLM8"
    />

    <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

    <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

    <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="/img/avatar-pink-tv.jpeg"
      sizes="16x16"
    />
    <link
      rel="icon"
      type="image/x-icon"
      href="/img/avatar-pink-tv.jpeg"
      sizes="16x16"
    />
    <link rel="apple-touch-icon-precomposed" href="/img/avatar-pink-tv.jpeg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed for gil.dev"
      href="/rss.xml"
    />
  </head>
  <body class="dark:bg-stone-800 dark:text-violet-50 max-w-3xl mx-auto">
    <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

    <header class="flex flex-col md:flex-row px-2 w-screen max-w-3xl">
      <a href="/"
        ><img
          src="/img/avatar-pink-tv.jpeg"
          alt="Photo of Gil Creque in a pink TV"
          height="48px"
          width="48px"
          class="rounded-full md:mb-8"
        /></a
      >
      {
        isHome ? (
          <>
            <p class="slab mb-0 pb-0 md:mb-8">&nbsp;Hello, I'm&nbsp;</p>
            <h1>Gil Creque</h1>
          </>
        ) : (
          <>
            <h1 class="grow text-center">{title || frontmatter.title}</h1>
          </>
        )
      }
    </header>
    <main class="px-2 w-screen max-w-3xl">
      <slot />
      <!-- your content is injected here -->
    </main>

    {
      isHome ? (
        <>
          <SocialLinks />
          <LatestNotes />
        </>
      ) : null
    }

    <Footer />
  </body><!-- End Document
    ––––––––––––––––––––––––––––––––––––––––––––––––––
-->
</html>
